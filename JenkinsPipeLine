pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Build') {
            steps {
                echo 'Hello World Build'
            }
        }
        stage('Test') {
            steps {
                echo 'Hello World Test'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Hello World Deploy'
            }
        }
        stage('Download') {
             steps {
                 echo 'Hello World Download'

                 def rootDir = pwd()
                 println("Current Directory: " + rootDir)

                 script {
                     scripts=load "test.groovy"
                 }

                 echo 'Hello World Download Finish'
             }
        }
    }
}